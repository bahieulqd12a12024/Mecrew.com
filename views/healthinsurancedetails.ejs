<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Custom styles for this template -->
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand text-center">
            <%=healthInsuranceName%>
        </a>
    </nav>
    <div class="row mt-5 mb-5">
        <%if (locals.list) {%>
            <%list.forEach((item)=> {%>
                <% if (item[healthInsuranceInData] && item[healthInsuranceInData].length !== 0) { %>
                <div class="col-md-1 card" style="width: 18rem;">
                    <h4>
                        <%=item.name%>
                    </h4>
                    <h6>
                        <%- item[healthInsuranceInData].replace(/\n/g, '<br>') %>
                    </h6>

                </div>
                <% } %>
            <% }); %>
        <% }; %>

    </div>
    <form class="form-group" action="/healthinsurances/news/<%= healthInsuranceName %>" method="post">
        <label for="exampleFormControlTextarea1">Your assessment</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="assessment" value=""><%=comment%></textarea>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Edit your comment</button>
    </form>
</body>

</html>